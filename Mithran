"use client";
import { useRouter } from "next/navigation";

export default function Home() {
  const r = useRouter();
  return (
    <div style={{height:"100vh",display:"flex",flexDirection:"column",alignItems:"center",justifyContent:"center",gap:16}}>
      <h1>ðŸš˜ Driveon Demo</h1>
